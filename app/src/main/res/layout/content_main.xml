<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ibnas.altinorobot.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/status_not_connected"
        android:textColor="#000000" />
    <ProgressBar
        android:id="@+id/connectload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_connect"
        android:id="@+id/bt_bluetooth"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/bt_exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Forward To Glory!!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bt_forward" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStatus"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_loop"
        android:textOff="loop off"
        android:textOn="loop on" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:id="@+id/s_cds"
        android:layout_alignTop="@+id/txtStatus"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ir1"
        android:layout_alignBottom="@+id/bt_loop"
        android:layout_alignStart="@+id/txtStatus"
        android:padding="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ir2"
        android:layout_alignBaseline="@+id/ir1"
        android:layout_alignBottom="@+id/ir1"
        android:layout_toEndOf="@+id/ir1"
        android:padding="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ir3"
        android:layout_alignBaseline="@+id/ir2"
        android:layout_alignBottom="@+id/ir2"
        android:layout_toEndOf="@+id/ir2"
        android:padding="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ir4"
        android:layout_alignBaseline="@+id/ir3"
        android:layout_alignBottom="@+id/ir3"
        android:layout_toEndOf="@id/ir3"
        android:padding="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ir5"
        android:layout_alignBaseline="@+id/ir4"
        android:layout_alignBottom="@+id/ir4"
        android:layout_toEndOf="@+id/ir4"
        android:padding="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ir6"
        android:layout_alignBaseline="@+id/ir5"
        android:layout_alignBottom="@+id/ir5"
        android:layout_toEndOf="@+id/ir5"
        android:padding="10dp" />

    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:id="@+id/bt_stop"
        android:layout_below="@+id/bt_forward"
        android:layout_alignStart="@+id/ir1" />

    <Button
        android:text="Reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_backward"
        android:layout_below="@+id/bt_stop"
        android:layout_alignStart="@+id/bt_stop" />

    <Button
        android:text="Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_up"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/bt_forward"
        android:layout_alignBottom="@+id/bt_forward"
        android:layout_toStartOf="@+id/ir6" />

    <Button
        android:text="Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_right"
        android:layout_below="@+id/bt_up"
        android:layout_toStartOf="@+id/bt_exit" />

    <Button
        android:text="Down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_down"
        android:layout_below="@+id/bt_right"
        android:layout_alignStart="@+id/bt_up" />

    <Button
        android:text="Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_left"
        android:layout_below="@+id/bt_up"
        android:layout_toStartOf="@+id/ir5"
        android:layout_marginEnd="17dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="500"
        android:progress="250"
        android:layout_above="@+id/bt_up"
        android:layout_alignEnd="@+id/ir6"
        android:layout_alignStart="@+id/bt_left" />

    <Button
        android:text="HONK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_horn" />
</RelativeLayout>
