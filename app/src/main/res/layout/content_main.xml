<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ibnas.altinorobot.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/status_not_connected"
        android:textColor="#000000" />
    <ProgressBar
        android:id="@+id/connectload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_connect"
        android:id="@+id/bt_bluetooth"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/bt_exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Forward To Glory!!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bt_forward" />

    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_forward"
        android:layout_toEndOf="@+id/bt_bluetooth"
        android:layout_marginStart="20dp"
        android:id="@+id/bt_stop" />

    <Button
        android:text="Reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_stop"
        android:layout_toEndOf="@+id/bt_stop"
        android:layout_marginStart="20dp"
        android:id="@+id/bt_backward" />

    <Button
        android:text="BUZZ OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_buzz_off"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bt_backward"
        android:layout_marginStart="13dp" />

    <Button
        android:text="LED OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_led_off"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bt_led_on" />

    <Button
        android:text="LED ON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_led_on"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="BUZZ ON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_buzz_on"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bt_stop" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStatus"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_loop"
        android:textOff="loop off"
        android:textOn="loop on" />
</RelativeLayout>
